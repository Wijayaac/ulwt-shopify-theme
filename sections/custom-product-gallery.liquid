{% if product.metafields.custom.gallery.value != blank %}
  <div class="page-width">
    <h2>Gallery (source)</h2>
    {%- for item in product.metafields.custom.gallery.value -%}
      <p>{{ item }}</p>
    {%- endfor -%}
  </div>
{% endif %}

{% schema %}
{
  "name": "custom product gallery",
  "class": "section",
  "settings": [
    {
      "type": "product",
      "id": "product",
      "label": "Product Selection"
    }
  ]
}
{% endschema %}
