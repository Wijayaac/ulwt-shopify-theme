{%- style -%}
  #shopify-section-{{ section.id }} {
    background: {{ section.settings.background }}
  }

  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
<div
  class="upsx-cf page-width isolate section-{{ section.id }}-padding{% if settings.animations_reveal_on_scroll %} scroll-trigger animate--slide-in{% endif %}"
>
  {%- form 'contact', id: 'ContactForm', class: contact_form_class -%}
    {%- if form.posted_successfully? -%}
      <h2 class="form-status form-status-list form__message" tabindex="-1" autofocus>
        {% render 'icon-success' %}
        {{ 'templates.contact.form.post_success' | t }}
      </h2>
    {%- elsif form.errors -%}
      <div class="form__message">
        <h2 class="form-status caption-large text-body" role="alert" tabindex="-1" autofocus>
          {% render 'icon-error' %}
          {{ 'templates.contact.form.error_heading' | t }}
        </h2>
      </div>
      <ul class="form-status-list caption-large" role="list">
        <li>
          <a href="#ContactForm-email" class="link">
            {{ form.errors.translated_fields.email | capitalize }}
            {{ form.errors.messages.email }}
          </a>
        </li>
      </ul>
    {%- endif -%}
    <div class="contact__fields">
      {% comment %} name {% endcomment %}
      <div class="field">
        <input
          class="field__input"
          autocomplete="name"
          type="text"
          id="ContactForm-name"
          name="contact[{{ 'templates.contact.form.name' | t }}]"
          value="{% if form.name %}{{ form.name }}{% elsif customer %}{{ customer.name }}{% endif %}"
          placeholder="{{ 'templates.contact.form.name' | t }}"
        >
        <label class="field__label" for="ContactForm-name">{{ 'templates.contact.form.name' | t }}</label>
      </div>
      {% comment %} email {% endcomment %}
      <div class="field field--with-error">
        <input
          autocomplete="email"
          type="email"
          id="ContactForm-email"
          class="field__input"
          name="contact[email]"
          spellcheck="false"
          autocapitalize="off"
          value="{% if form.email %}{{ form.email }}{% elsif customer %}{{ customer.email }}{% endif %}"
          aria-required="true"
          {% if form.errors contains 'email' %}
            aria-invalid="true"
            aria-describedby="ContactForm-email-error"
          {% endif %}
          placeholder="{{ 'templates.contact.form.email' | t }}"
        >
        <label class="field__label" for="ContactForm-email">
          {{- 'templates.contact.form.email' | t }}
          <span aria-hidden="true">*</span></label
        >
        {%- if form.errors contains 'email' -%}
          <small class="contact__field-error" id="ContactForm-email-error">
            <span class="visually-hidden">{{ 'accessibility.error' | t }}</span>
            <span class="form__message">
              {%- render 'icon-error' -%}
              {{- form.errors.translated_fields.email | capitalize }}
              {{ form.errors.messages.email -}}
            </span>
          </small>
        {%- endif -%}
      </div>
    </div>
    {% comment %} phone {% endcomment %}
    <div class="field">
      <input
        type="tel"
        id="ContactForm-phone"
        class="field__input"
        autocomplete="tel"
        name="contact[{{ 'templates.contact.form.phone' | t }}]"
        pattern="[0-9\-]*"
        value="{% if form.phone %}{{ form.phone }}{% elsif customer %}{{ customer.phone }}{% endif %}"
        placeholder="{{ 'templates.contact.form.phone' | t }}"
      >
      <label class="field__label" for="ContactForm-phone">{{ 'templates.contact.form.phone' | t }}</label>
    </div>
    {% comment %} packs {% endcomment %}
    <div class="field">
      <input
        type="number"
        id="ContactForm-packs"
        class="field__input"
        autocomplete="number"
        name="contact[packs]"
        pattern="[0-9\-]*"
        value="{% if form.packs %}{{ form.packs }}{% elsif customer %}{{ customer.packs }}{% endif %}"
        placeholder="* No of Packs"
      >
      <label class="field__label" for="ContactForm-packs">packs</label>
    </div>

    {% comment %} time {% endcomment %}
    <div class="field">
      <label for="ContactForm-date">* Date ov event</label>
      <input
        type="date"
        id="ContactForm-date"
        name="contact[date]"
        value="{% if form.date %}{{ form.date }}{% endif %}"
      >
    </div>
    <div class="field">
      <label for="ContactForm-time">What is this regarding?</label>
      <select id="ContactForm-time" name="contact[time]" value="{% if form.time %}{{ form.time }}{% endif %}">
        {% for hour in (6..12) %}
          {% if hour == 12 %}
            <option value="{{hour}}PM">{{ hour }}PM</option>
          {% else %}
            <option value="{{ hour }}AM">{{ hour }}AM</option>
          {% endif %}
        {% endfor %}
        {% for hour in (1..5) %}
          <option value="{{hour}}PM">{{ hour }}PM</option>
        {% endfor %}
      </select>
    </div>

    {% comment %} motes {% endcomment %}
    <div class="field">
      <textarea
        rows="10"
        id="ContactForm-body"
        class="text-area field__input"
        name="contact[notes]"
        placeholder="Any other notes for us?"
      >
				{{- form.body -}}
			</textarea>
      <label class="form__label field__label" for="ContactForm-body">
        Preference on protein, marinades, sauce and dips
      </label>
    </div>
    <div class="contact__button">
      <button type="submit" class="button">
        {{ 'templates.contact.form.send' | t }}
      </button>
    </div>
  {%- endform -%}
</div>
{% schema %}
{
  "name": "Catering Form",
  "class": "upsx-cf",
  "settings": [
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 36
    }
  ],
  "presets": [
    {
      "name": "Catering Form"
    }
  ]
}
{% endschema %}
